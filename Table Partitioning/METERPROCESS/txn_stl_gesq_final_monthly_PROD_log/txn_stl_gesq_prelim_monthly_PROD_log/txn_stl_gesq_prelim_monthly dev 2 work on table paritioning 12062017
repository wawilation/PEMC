/****txn_stl_gesq_prelim_monthly****/
1.)
CREATE TABLE txn_stl_gesq_prelim_monthly_2 (
    id bigint NOT NULL,
    created_datetime timestamp without time zone,
    actual_mtn character varying(255),
    actual_sein character varying(255),
    facility_type character varying(255),
    gesq double precision,
    market_fee double precision,
    mtn character varying(255),
    mtn_active character(1),
    mtn_facility_type character varying(255),
    reading_datetime timestamp without time zone,
    sein character varying(255),
    trade_participant_application_status character varying(255),
    version bigint
);
ALTER TABLE txn_stl_gesq_prelim_monthly_2 OWNER TO crss_meterprocess;

ALTER TABLE ONLY txn_stl_gesq_prelim_monthly_2
    ADD CONSTRAINT txn_stl_gesq_prelim_monthlypk_2 PRIMARY KEY (id);

CREATE INDEX idx_rgesq_prel_rdt_mtn_st_2 ON txn_stl_gesq_prelim_monthly_2 USING btree (reading_datetime, mtn_active, trade_participant_application_status);

GRANT ALL ON TABLE txn_stl_gesq_prelim_monthly_2 TO crss_uat_user;


